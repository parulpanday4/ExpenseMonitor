<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Expense :-"
        android:id="@+id/TVExpense"
        android:layout_alignParentTop="true"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"/>


    <EditText
        android:id="@+id/edtExpense"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/TVExpense"
        android:layout_alignTop="@+id/TVExpense"
        android:layout_toEndOf="@id/TVExpense" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Amount :-"
        android:id="@+id/TVamount"
        android:layout_below="@id/TVExpense"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"/>


    <EditText
        android:id="@+id/edtAmount"
        android:layout_width="match_parent"
        android:layout_below="@id/edtExpense"
        android:layout_toRightOf="@id/TVamount"
        android:inputType="number"
        android:layout_height="wrap_content" />

</RelativeLayout>